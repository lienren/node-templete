{
  "apps": [
    {
      "name": "autoTask",
      "script": "./src/task/autoTask.js",
      "watch": false,
      "ignore_watch": ["node_modules", "build", "logs"],
      "out_file": "./logs/out.log",
      "error_file": "./logs/error.log",
      "max_memory_restart": "2G",
      "env": {
        "NODE_ENV": "production"
      },
      "exec_mode": "cluster",
      "instances": "1",
      "autorestart": true
    }
  ]
}
